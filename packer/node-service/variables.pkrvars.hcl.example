# Example Packer variables file
# Copy to variables.pkrvars.hcl and fill in your values

aws_region       = "us-east-1"
node_version     = "20"
instance_type    = "t3.medium"

# Base AMI (Amazon Linux 2023 CIS Level 2)
base_ami_name  = "al2023-ami-cis-level2-*"
base_ami_owner = "amazon"

# Security agent configuration
wazuh_manager_ip     = "10.0.100.10"
newrelic_license_key = "YOUR_NEWRELIC_LICENSE_KEY"
falcon_cid           = "YOUR_CROWDSTRIKE_CID"

# Optional: VPC configuration for builder instance
# vpc_id    = "vpc-xxxxxxxx"
# subnet_id = "subnet-xxxxxxxx"
